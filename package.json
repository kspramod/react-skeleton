{
  "name": "cra-sample",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "commitizen": "^4.2.3",
    "cz-customizable": "^6.3.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "postinstall": "husky install configs/husky",
    "commit": "git-cz",
    "format": "npm-run-all -p format:*",
    "format:scripts": "npm-run-all \"lint:eslint --fix\"",
    "format:prettier": "npm-run-all \"lint:prettier --write\"",
    "lint": "npm-run-all -p lint:*",
    "lint:eslint": "eslint --report-unused-disable-directives \"*.js\" \"src/**/*.{js,jsx}\" \"configs/**/*.js\"",
    "lint:prettier": "prettier --check \"src/**/*.{js,jsx}\"",
    "precommit:verify": "npm-run-all lint test:ci",
    "prepush:verify": "npm-run-all lint test:ci"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "configs/commitizen-config/commit.config.js"
    }
  }
}
